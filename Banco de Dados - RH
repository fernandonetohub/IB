CREATE TABLE setor (
	idsetor int(2) Primary Key,
	nomesetor varchar (30), 
	divsetor varchar (30)
);
CREATE TABLE cargo (
	idcargo int Primary Key,
	funcao varchar (40),
	nomesetor varchar (30)
);
CREATE TABLE colaboradores (
    idcolaboradores int  Primary Key,
    nome VARCHAR(40),
    cpf VARCHAR(40) UNIQUE,
    genero CHAR(1),
    idsetor NUMERIC NOT NULL,
    idcargo NUMERIC NOT NULL,
    CONSTRAINT CH_Colaborador CHECK (genero IN ('F' , 'M'))
);

ALTER TABLE colaboradores
ADD CONSTRAINT FK_funcao FOREIGN KEY (idcargo) REFERENCES cargo (idcargo);

ALTER TABLE colaboradores
ADD CONSTRAINT FK_setor FOREIGN KEY (idsetor) REFERENCES setor (idsetor);

